<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="invisible"
    android:id="@+id/log_form"
    android:background="@drawable/dialog_full_holo_dark"
    >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView android:id="@+id/log_form_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        style="@android:style/TextAppearance.DialogWindowTitle"
	        android:gravity="center"
	        android:layout_weight="1"/>
	    <Button android:id="@+id/log_form_save"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="SAVE"/>
	    <Button android:id="@+id/log_form_close"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="CLOSE"/>
	</LinearLayout>
	<View android:layout_width="match_parent"
	    android:layout_height="2dip"
	    android:paddingLeft="22dip"
	    android:paddingRight="22dip"
	    android:background="#FF00CCFF"
	    android:layout_marginTop="8dip"
	    android:layout_marginBottom="8dip"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:id="@+id/log_form_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dip"
            />
    </ScrollView>

</LinearLayout>